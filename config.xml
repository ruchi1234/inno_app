<?xml version='1.0' encoding='utf-8'?>
<widget id="com.weblogtemplates.innorade" version="1.0.9" android-versionCode="250" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Innorade</name>
    <description>
        A B2B app for online order.
    </description>
    <author email="info.support@gmail.com" href="http://innorade.com">
        Webnexus Team
    </author>
    <content src="index.html" />
       <plugin name="cordova-plugin-whitelist" version="1" />

   
    <plugin name="cordova-plugin-splashscreen" spec="2.1.0" source="pgb" />
    <plugin  name="org.apache.cordova.network-information"  version="0.2.7" />
    <plugin name="net.bgta.phonegap.plugin.appversion" spec="1.1.1" source="pgb" />
    <plugin name="com.phonegap.plugins.pushplugin" source="pgb"  />
    <plugin name="com.telerik.plugins.nativepagetransitions"  source="npm" />
    <gap:config-file platform="android" parent="/manifest">
        <uses-permission name="android.permission.ACCESS_NETWORK_STATE" />
    </gap:config-file>

    <gap:config-file platform="android" parent="/manifest">
        <uses-permission name="android.permission.INTERNET" />
    </gap:config-file>

    <gap:config-file platform="android" parent="/manifest">
        <uses-permission name="android.permission.READ_PHONE_STATE" />
    </gap:config-file>

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.NetworkManager" />
        <param name="ios-package" value="CDVConnection" />
    </feature>
    
    <preference  name="SplashScreen"  value="screen" />
    <preference  name="SplashScreenDelay"     value="6000" />
    <preference name="ShowSpinner" value="true" /> 
    <preference name="DisallowOverscroll" value="true" />
    <preference name="CrosswalkAnimatable" value="true" /> 
    <feature name="SplashScreen" >
        <param  name="android-package"  value="org.apache.cordova.splashscreen.SplashScreen" /> 
        <param  name="onload" value="true" />
    </feature>


    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon  src="img/innorade.png" width="180" height="180"  />
    <splash src="img/splash.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        

        <icon src="img/icon/ldpi.png"  qualifier="ldpi" />
        <icon src="img/icon/mdpi.png"  qualifier="mdpi" />
        <icon src="img/icon/hdpi.png"  qualifier="hdpi" />
        <icon src="img/icon/xhdpi.png"  qualifier="xhdpi" />
        <icon src="img/icon\xxhdpi.png" platform="android" qualifier="xxhdpi" />

        <splash src="img/splash/portrait-ldpi.png"  qualifier="port-ldpi" />
        <splash src="img/splash/portrait-mdpi.png"  qualifier="port-mdpi" />
        <splash src="img/splash/portrait-hdpi.png"  qualifier="port-hdpi" />
        <splash src="img/splash/portrait-xhdpi.png"  qualifier="port-xhdpi" />

        <splash src="img/splash/landscape-ldpi.png"  qualifier="land-ldpi" />
        <splash src="img/splash/landscape-mdpi.png"  qualifier="land-mdpi" />
        <splash src="img/splash/landscape-hdpi.png"  qualifier="land-hdpi" />
        <splash src="img/splash/landscape-xhdpi.png"  qualifier="land-xhdpi" />    
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
             <icon  src="img/innorade.png" width="180" height="180"  />
             <icon src="img/icon/ios/icon.png" width="57" height="57" />
             <icon src="img/icon/ios/icon-60.png" width="60" height="60" />
             <icon src="img/icon/ios/icon-60@2x.png" width="120" height="120" />
             <icon src="img/icon/ios/icon-60@3x.png" width="180" height="180" />
             <icon src="img/icon/ios/icon-76.png" width="76" height="76" />
             <icon src="img/icon/ios/icon-76@2x.png" width="152" height="152" />
             <icon src="img/icon/ios/icon-40.png" width="40" height="40" />
             <icon src="img/icon/ios/icon-40@2x.png" width="80" height="80" />
             <icon src="img/icon/ios/icon@2x.png" width="114" height="114" />
             <icon src="img/icon/ios/icon-72.png" width="72" height="72" />
             <icon src="img/icon/ios/icon-72@2x.png" width="144" height="144" />
             <icon src="img/icon/ios/icon-small.png" width="29" height="29" />
             <icon src="img/icon/ios/icon-small@2x.png" width="58" height="58" />
             <icon src="img/icon/ios/icon-50.png" width="50" height="50" />
             <icon src="img/icon/ios/icon-50@2x.png" width="100" height="100" />
            <!-- iPhone and iPod touch -->
            <splash src="img/splash/ios/568h@2x~iphone.png" platform="ios" width="320" height="480" />
            <splash src="img/splash/ios/Default.png" platform="ios" width="320" height="480" />
            <splash src="img/splash/ios/Default@2x.png" platform="ios" width="640" height="960" />

            <!-- iPhone 5 / iPod Touch (5th Generation) -->
            <splash src="img/splash/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />

            <!-- iPhone 6 -->
            <splash src="img/splash/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
            <splash src="img/splash/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
            <splash src="img/splash/ios/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />

            <!-- iPad -->
            <splash src="img/splash/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
            <splash src="img/splash/ios/Default-Landscape.png" platform="ios" width="1024" height="768" />

            <!-- Retina iPad -->
            <splash src="img/splash/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
            <splash src="img/splash/ios/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" /> 
    </platform>
    
</widget>
